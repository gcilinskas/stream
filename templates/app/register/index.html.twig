{% extends 'app/base.html.twig' %}

{% block body %}
    <!-- MainContent -->
    <section class="sign-in-page">
        <div class="container">
            <div class="row justify-content-center align-items-center height-self-center">
                <div class="col-lg-5 col-md-12 align-self-center">
                    <div class="sign-user_card ">
                        <div class="sign-in-page-data">
                            <div class="sign-in-from w-100 m-auto">
                                <h3 class="mb-3 text-center">Registracija</h3>
                                <form class="mt-4" action="{{ path('register_index') }}" method="POST">
{#                                    <div class="form-group">#}
{#                                        <input type="text" class="form-control mb-0" id="name" placeholder="Vardas" autocomplete="off" required>#}
{#                                    </div>#}
                                    <div class="form-group">
                                        <input type="email" class="form-control mb-0" name="email" id="email" placeholder="El-paštas" autocomplete="off" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control mb-0" name="password" id="password" placeholder="Slaptažodis" required>
                                    </div>
                                    <div class="custom-control custom-checkbox mb-3">
                                        <input type="checkbox" class="custom-control-input" id="customCheck">
                                        <label class="custom-control-label" for="customCheck">Aš sutinku, kad susipažinau su <a href="#" class="text-primary">portalo paslaugų naudojimosi taisyklėmis</a></label>
                                    </div>

                                    <button type="submit" class="btn btn-hover">Registruotis</button>

                                </form>
                            </div>
                        </div>
                        <div class="mt-3">
                            <div class="d-flex justify-content-center links">
                                Jau turi paskyrą? <a href="{{ path('app_login') }}" class="text-primary ml-2">Prisijungimas</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
