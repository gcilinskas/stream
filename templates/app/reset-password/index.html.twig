{% extends 'app/base.html.twig' %}

{% block body %}
<!-- MainContent -->
<section class="sign-in-page">
    <div class="container">
        <div class="row justify-content-center align-items-center height-self-center">
            <div class="col-lg-5 col-md-12 align-self-center">
                <div class="sign-user_card ">
                    <div class="sign-in-page-data">
                        <div class="sign-in-from w-100 m-auto">
                            <h3 class="mb-3 text-center">Atstatyti Slaptažodį</h3>
                            <p class="text-body">Įveskite savo el-paštą slaptažodžio atstatymui</p>
                            <form class="mt-4" method="POST">
                                <div class="invalid-feedback">
                                    {% if error %}
                                        <p>{{ error }}</p>
                                    {% endif %}
                                    <p>Šiuo metu slaptažodžių atstatymas yra tvarkomas. Laikinai ši paslauga yra nepasiekiama</p>
                                </div>
                                <div class="form-group">
                                    <input type="email" name="email" class="form-control mb-0" id="reset-email" placeholder="El-paštas" autocomplete="off" required>
                                </div>
                                <div class="sign-info">
                                    <button type="submit" class="btn btn-hover" disabled>Atstatyti</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
